<div class="container center list">
  <h1 class="jumbotron-heading">Lists</h1>
  <div>
    <%= link_to "Create list", new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
  <% @lists.each do |list| %>
    <div class="jumbotron">
      <h1 class="display-4"><%= list.title %></h1>
      <p class="lead"><%= list.description %></p>

      <div class="d-flex justify-content-between align-item-center">
        <%= link_to "Show", list_path(list), class: "btn btn-primary" %>
        <div>
          <%= link_to "Edit", edit_list_path(list), class: "btn btn-primary btn-warning" %>
          <%= link_to "Delete", list_path(list), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @lists, theme: 'twitter-bootstrap-4',
             pagination_class: "pagination-sm",
             nav_class: "d-inline-b" %>