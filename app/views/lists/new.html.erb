<div class="container">
  <%= link_to "Back", lists_path, class: "btn btn-outline-secondary" %>

  <h2 class="text-center">Create list</h2>

  <%= form_with scope: :list, url: :lists, local: true do |form| %>
    <div class="row elements-page-btn mt-3">
      <div class="col-md-8 col-sm-8 mx-auto text-center mb-5">

        <div class="form-group text-center">
          <%= form.label :title %><br>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= form.label :description %><br>
          <%= form.text_area :description, class: "form-control" %>
        </div>

        <div class="actions">
          <%= form.submit "Create", class: "btn btn-outline-success" %>
        </div>

      </div>
    </div>
  <% end %>
</div>