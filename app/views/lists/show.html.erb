<%= link_to "LISTS", lists_path %>
<br><br>

<strong>Title: </strong>
<%= @list.title %>

<br>

<strong>Description</strong>
<%= @list.description %>

<br>
<%= link_to "Edit", edit_list_path(@list) %>

<br><br>
<%= link_to "New wish", new_list_wish_path(@list) %>
<br>
<% @list.wishes.each do |wish| %>
  <p>
    <strong>Title: </strong>
    <%= wish.title %>
  <br>
    <strong>Price: </strong>
    <%= wish.price %>
  <br>
    <strong>Comment: </strong>
    <%= wish.comment %>
  <br>
    <%= link_to "Edit",  edit_list_wish_path(wish.list, wish)%>
    <%= link_to "Delete",  list_wish_path(wish.list, wish), method: :delete, data: {confirm: 'Are you sure?'} %>
  </p>
<% end %>